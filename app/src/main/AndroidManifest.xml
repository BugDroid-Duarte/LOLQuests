<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bugdroid.lolquests">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".Outros.AppController"
        android:allowBackup="true"
        android:icon="@drawable/lolpq"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameHistory"
            android:label="Game History" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="About" />
        <activity
            android:name=".Activities.QuestsActivity"
            android:label="@string/title_activity_quests"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ProfileQuest"
            android:label="@string/title_activity_daily_quest"
            android:theme="@style/AppTheme" />

        <receiver android:name=".Outros.AlarmReceiver" />

        <activity android:name=".Activities.Preferences" />
        <activity android:name=".Activities.UserSettings" />
        <activity android:name=".Activities.RegisterActivity"></activity>
    </application>

</manifest>